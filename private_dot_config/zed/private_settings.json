// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "assistant": {
    "default_model": {
      "provider": "deepseek",
      "model": "deepseek-chat"
    },
    "version": "2"
  },
  "icon_theme": "Catppuccin Macchiato",
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },
  "ui_font_size": 16,
  "ui_font_family": "JetBrainsMono Nerd Font Mono",
  "buffer_font_family": "JetBrainsMono Nerd Font Mono",
  "buffer_font_size": 14,
  "buffer_font_weight": 400,
  "buffer_line_height": "comfortable",
  "theme": {
    "mode": "system",
    "light": "Catppuccin Latte",
    "dark": "Catppuccin Macchiato"
  },
  // For transparent background
  // "experimental.theme_overrides": {
  //   "background.appearance": "transparent",
  //   "background": "#181926dd",
  //   "panel.background": "#1e2030dd",
  //   "editor.background": "#24273add",
  //   "status_bar.background": "#181926dd",
  //   "tab_bar.background": "#181926dd",
  //   "title_bar.background": "#181926dd",
  //   "editor.gutter.background": "#24273add",
  //   "terminal.background": "#24273add",
  //   "tab.active_background": "#24273add",
  //   "editor.active_line.background": "#363a4fdd"
  // },
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false,
    "show_tab_bar_buttons": false
  },
  "tab_size": 2,
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false
  }
}
